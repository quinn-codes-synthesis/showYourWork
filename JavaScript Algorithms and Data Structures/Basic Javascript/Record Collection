// Setup
var collection = {
    "2548": {
      "album": "Slippery When Wet",
      "artist": "Bon Jovi",
      "tracks": [ 
        "Let It Rock", 
        "You Give Love a Bad Name" 
      ]
    },
    "2468": {
      "album": "1999",
      "artist": "Prince",
      "tracks": [ 
        "1999", 
        "Little Red Corvette" 
      ]
    },
    "1245": {
      "artist": "Robert Palmer",
      "tracks": [ ]
    },
    "5439": {
      "album": "ABBA Gold"
    }
};
// Keep a copy of the collection for tests
var collectionCopy = JSON.parse(JSON.stringify(collection));

// Only change code below this line
function updateRecords(id, prop, value) {
  if (prop !== "tracks" && value !== "") {
    collection[id][prop] = value; // updating non-tracks property to hold new value 
  } else if (prop == "tracks" && value !== "") {
    if (collection[id].hasOwnProperty("tracks") == false) {
      collection[id].tracks = [""]; // creating a new "tracks" array
      collection[id].tracks.push(value); // adding track name to track array
    } else {
      collection[id].tracks.push(value);
    }
  } else if (value == "") {
    delete collection[id][prop];
  }
  
  /* didn't initially realize the period had to be in there after a bracket when mixing bracket notation
  with dot notation. Turns out one pesky dot was the source of most of my troubles on this challenge. */
  
  return collection;
}

// Alter values below to test your code
updateRecords(5439, "artist", "ABBA");
